<div class="col-md-12">
  <div class="movie">
    <%= link_to("添加新电影", new_movie_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>电影名称</td>
        <td>影评内容</td>
        <td>创建者</td>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td>#</td>
          <td><%= link_to(movie.title, movie_path(movie)) %></td>
          <td><%= simple_format(movie.description) %></td>
          <td><%= movie.user.email %></td>
          <td>
            <% if current_user && current_user == movie.user %>
              <%= link_to("编辑", edit_movie_path(movie), class: "btn btn-sm btn-default") %>
              <%= link_to("删除", movie_path(movie), class:"btn btn-sm btn-fault", method: :delete, data: { confirm: "真的要删除吗？" }) %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
